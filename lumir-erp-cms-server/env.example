# 애플리케이션 설정
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# 데이터베이스 설정 (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password  
DB_NAME=lumir_cms_db

# JWT 설정
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=1d

# SSO 서버 설정
SSO_SERVER_URL=https://your-sso-server.example.com
SSO_CLIENT_ID=your_sso_client_id
SSO_CLIENT_SECRET=your_sso_client_secret

# 메타데이터 서버 설정 (직원/부서 정보)
METADATA_SERVER_URL=https://your-metadata-server.example.com
METADATA_API_KEY=your_metadata_api_key

# CORS 설정 (콤마로 구분된 도메인 목록 또는 *)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# 동기화 설정 (분 단위)
SYNC_INTERVAL_MINUTES=60
